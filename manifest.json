{
  "manifest_version": 2,
  "name": "le-git-imate",
  "description": "Sign commits through the GitHub/GitLab web UI",
  "version": "0.1.2",
  "options_page": "config/setup.html",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "app.js",
      "config/setup.js"
    ]
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },
  "browser_action": {
    "default_icon": "assets/img/icon48.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gitlab.com/*"
      ],
      "js": [
        "content.js",
        "libs/jquery.min.js"
      ]
    }
  ]
}
